check process amadeus_poller
  with pidfile /data/<%= @app_name %>/current/lib/amadeus.rb.pid
  start program = "ruby /data/<%= @app_name %>/current/amadeus_daemon.rb start" with timeout 60 seconds
  stop program = "ruby /data/<%= @app_name %>/current/amadeus_daemon.rb stop" with timeout 60 seconds
  if totalmem is greater than 300 MB then restart # eating up memory?
  group <%= @app_name %>